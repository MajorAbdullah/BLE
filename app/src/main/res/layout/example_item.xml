                        android:textColor="@color/purple_200"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/dversion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="version"
                        android:textSize="30sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
