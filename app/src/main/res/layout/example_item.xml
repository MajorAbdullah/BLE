                    android:id="@+id/namehash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hash Code:"
                    android:textColor="@color/purple_200"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/dhash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hashcode"
                    android:textSize="30sp" />

            </LinearLayout>

               <LinearLayout
            android:id="@+id/Flags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="-2dp"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/FLAGS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="FLAGS"
                    android:textAlignment="center"
                    android:textColor="@color/red"
                    android:textSize="30sp" />


            </LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">

                       <TextView
                           android:id="@+id/F1"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="LE Limited Discoverable Mode:"
                           android:textColor="@color/purple_200"
                           android:textSize="20sp" />

                       <TextView
                           android:id="@+id/f1"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="ID"
                           android:textSize="20sp" />

                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">

                       <TextView
                           android:id="@+id/F2"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text=" LE General Discoverable Mode:"
                           android:textColor="@color/purple_200"
                           android:textSize="20sp" />

                       <TextView
                           android:id="@+id/f2"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="ID"
                           android:textSize="20sp" />

                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">

                       <TextView
                           android:id="@+id/F3"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="(inverted) BR/EDR Not Supported:"
                           android:textColor="@color/purple_200"
                           android:textSize="20sp" />

                       <TextView
                           android:id="@+id/f3"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="ID"
                           android:textSize="20sp" />

                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">

                       <TextView
                           android:id="@+id/F4"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Same device capable controller:"
                           android:textColor="@color/purple_200"
                           android:textSize="20sp" />

                       <TextView
                           android:id="@+id/f4"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="ID"
                           android:textSize="20sp" />

                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">

                       <TextView
                           android:id="@+id/F5"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Same device capable host:"
                           android:textColor="@color/purple_200"
                           android:textSize="20sp" />

                       <TextView
                           android:id="@+id/f5"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="ID"
                           android:textSize="20sp" />

                   </LinearLayout>

               </LinearLayout>


            <LinearLayout
