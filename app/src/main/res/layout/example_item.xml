<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:textAlignment="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="-2dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nameadvertising"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Advertising type:"
                    android:textColor="@color/purple_200"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/dadvertising"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID"
                    android:textSize="30sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nameid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RSSI:"
                    android:textColor="@color/purple_200"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/did"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="rssi"
                    android:textSize="30sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/namedname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Device Name:"
                    android:textColor="@color/purple_200"
                    android:textSize="30sp" />


                <TextView
                    android:id="@+id/dname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="name"
                    android:textSize="30sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/nameaddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Device Address:"
                    android:textColor="@color/purple_200"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/daddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textSize="30sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/namehash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hash Code:"
                    android:textColor="@color/purple_200"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/dhash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hashcode"
                    android:textSize="30sp" />

            </LinearLayout>

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="?android:attr/listDivider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="-2dp"
                android:orientation="vertical"
                android:id="@+id/llibeacon"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/IBEACON"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="I BEACON"
                        android:textAlignment="center"
                        android:textColor="@color/purple_200"
                        android:textSize="30sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/nameuuid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UUID:"
                        android:textColor="@color/purple_200"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/duuid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID"
                        android:textSize="30sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/namemajor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MAJOR:"
                        android:textColor="@color/purple_200"
                        android:textSize="30sp" />


                    <TextView
                        android:id="@+id/dmajor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="major"
                        android:textSize="30sp" />

                </LinearLayout>

                <LinearLayout
