                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/nameuuid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UUID:"
                        android:textColor="@color/purple_200"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/duuid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID"
                        android:textSize="30sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/namemajor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MAJOR:"
                        android:textColor="@color/purple_200"
                        android:textSize="30sp" />


                    <TextView
                        android:id="@+id/dmajor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="major"
                        android:textSize="30sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/nameminor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MINOR:"
                        android:textColor="@color/purple_200"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/dminor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="minor"
                        android:textSize="30sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/namepower"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="POWER level:"
                        android:textColor="@color/purple_200"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/dpower"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="power"
                        android:textSize="30sp" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/lleddystoneUID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="-2dp"
                android:orientation="vertical"
                android:visibility="gone">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/EddystoneUID"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Eddystone UID"
                        android:textAlignment="center"
                        android:textColor="@color/green"
                        android:textSize="30sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/namepower1"
                        android:layout_width="wrap_content"
